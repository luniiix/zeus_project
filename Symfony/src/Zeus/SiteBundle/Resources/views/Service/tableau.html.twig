{# src/Zeus/SiteBundle/Resources/views/Service/tableau.html.twig #}

<h1>Liste des services</h1>

{% if pagination|length > 0 %}

<div class="count">
    Nombre : {{ pagination.getTotalItemCount }}
</div>

<table class="table-responsive">
    <thead>
        <tr>
            <th>Actions</th>
            <th>{{ knp_pagination_sortable(pagination, 'Nom', 'service.nom') }}</th>
        </tr>
    </thead>
    <tbody>
            {% for service in pagination %}  
            <tr>
                <td>
                    <a href="{{ path('zeus_site_service_suppr', { 'idService': service.id }) }}">
                        <img alt="edit" src="{{ asset('bundles/zeussite/img/icons/cross.png') }}" />
                    </a>
                    <a href="{{ path('zeus_site_service_modif', { 'idService': service.id }) }}">
                        <img alt="edit" src="{{ asset('bundles/zeussite/img/icons/pencil.png') }}" />
                    </a>
                </td>
                <td>{{ service.nom }}</td>  
            </tr>
            {% endfor %}  
        </tbody>
		
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% else %}
    <div>Aucun Service</div>
{% endif %}